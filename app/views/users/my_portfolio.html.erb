<h1>My Portfolio</h1>

<div class="search_area">
  <h3>Search Stocks</h3>
  <%= form_with url: search_stock_path, method: :get, local: false do |form| %>
    <div class="form_group row">
      <div class="col-sm-9 no-right-padding">
        <%= form.text_field :stock, placeholder: "stock ticker symbol",
            class: "form-control" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">
  
  
</div>
