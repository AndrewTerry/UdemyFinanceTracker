<h1>My Portfolio</h1>

<div class="search_area">
  <h3>Search Stocks</h3>
  <%= form_with url: search_stock_path, method: :get do |form| %>
    <div class="form_group row">
      <div class="col-sm-9 no-right-padding">
        <%= form.text_field :stock, placeholder: "stock ticker symbol",
            class: "form-control" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @stock %>
  </p>
  <div class="card text-dark bg-light mb-3" style="max-width: 18rem;">
    <div class="card-header"><%= @stock.ticker_symbol %></div>
    <div class="card-body">
      <h5 class="card-title"><%= @stock.name %></h5>
      <p class="card-text">Latest price: $<%= @stock.last_price %></p>
    </div>
  </div>
<% end %>